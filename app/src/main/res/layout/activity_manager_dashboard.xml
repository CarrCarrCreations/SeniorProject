<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_manager_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carrc.seniorproject.ManagerDashboardActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Create Employee Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createEmployeeButton"
            android:onClick="createEmployee" />

        <Button
            android:text="Delete Employee Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteAccountButton"
            android:onClick="deleteAccount" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tableNumberEditText"
            android:hint="Enter Table Number Here..." />

        <Button
            android:text="Save Table Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableNumberButton"
            android:onClick="setTableNumber" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numOfTablesEditText"
            android:hint="Enter number of tables here..." />

        <Button
            android:text="Set Number Of Tables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numOfTablesButton"
            android:onClick="setNumTables" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableNumberTextView" />

        <Button
            android:text="Ingredient Management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredientManagementButton"
            android:onClick="ingredientManagement" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="recipeManagement"
            android:text="Recipe Management" />

        <Button
            android:id="@+id/inventoryManagementButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inventoryManagement"
            android:text="Inventory Management" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="recipeSearch"
            android:text="Recipe Searchable" />

    </LinearLayout>
</RelativeLayout>
