<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_employee_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carrc.seniorproject.CreateEmployeeAccountActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp"
        android:id="@+id/usernameEditText"
        android:hint="Enter employee username here.." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/usernameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/passwordEditText"
        android:hint="Enter employee password here..." />

    <Button
        android:text="Create Employee Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createEmployeeButton"
        android:onClick="createEmployee"
        android:layout_below="@+id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp" />

    <CheckBox
        android:text="Employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignStart="@+id/createEmployeeButton"
        android:layout_marginTop="38dp"
        android:id="@+id/employeeCheckBox" />

    <CheckBox
        android:text="Manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/employeeCheckBox"
        android:layout_alignEnd="@+id/createEmployeeButton"
        android:id="@+id/managerCheckBox" />
</RelativeLayout>
